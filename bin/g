#!/bin/bash

if [ $# -eq 0 ]; then
   cat <<EOUSAGE
options include:
   build - go build
   install - go install
   get - go get
   s - tig status
   b - create branch
EOUSAGE
fi

cmd=$1
shift
case $cmd in
  start)
    if [ $# -ne 1 ]; then
      echo "usage: $0 NEW_BRANCH_NAME"
      return 127
    fi
    git checkout master
    git pull origin master
    git branch $1
    git checkout $1
    git pull origin master
    ;;
  t)
    tig status
    ;;

  *)
    git $cmd "$@"
    ;;
esac
  
   
