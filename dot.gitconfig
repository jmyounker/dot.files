[alias]
        b = branch
        br = branch
        c = checkout
        ci = commit -m
        co = checkout
        down = pull
        dt = difftool
        mt = mergetool
        p = pull
        pm = pull origin master
        pom = pull origin master
        s = status
        sclone = !~/bin/git_sclone $1
        start = !~/bin/git_start $1
        submit = commit
        t = !git_tig_status
        up = push

[user]
	name = Jeff Younker
	email = jeff@drinktomi.com

[color]
	ui = true
	status = auto
	branch = auto

[merge]
        keepBackup = false
        tool = p4merge

[mergetool "p4merge"]
        cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
        keepTemporaries = false
        trustExitCode = false
        keepBackup = false

[diff]
        tool = p4diff

[difftool]
        prompt = false

[difftool "p4diff"]
        cmd = p4merge "$LOCAL" "$REMOTE"
        keepBackup = false

[core]
        editor = vi
        excludesfile = ~/.gitignore_global

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[push]
	default = current
